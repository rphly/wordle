module buttons_controller (
    input clk,  // clock
    input rst,  // reset
    
    input aIn,
    output is_pressed,
    output out
  ) {
  .clk(clk) {
    button a(.button_input(aIn));
   }
  
  always {
    out = 0;
    is_pressed = 0;
    
    case (a.out) {
      1:
       out = 0;
       is_pressed = 1;
    }
  }
}
