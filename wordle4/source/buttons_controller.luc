module buttons_controller (
    input clk,  // clock
    input rst,  // reset
    
    input aIn,
    output is_pressed,
    output out
  ) {
  .clk(clk) {
    button a(.button_input(aIn));
   }
  
  always {
    
    case (a.out) {
      b1:
       out = a.out;
       is_pressed = b1;
      default:
        out = 0;
        is_pressed = 0;
    }
  }
}
