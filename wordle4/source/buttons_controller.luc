module buttons_controller (
    input clk,  // clock
    input rst,  // reset
    
    input a,
    output is_pressed,
    output out[16]
  ) {
  .clk(clk) {
    button a_button(.button_input(a));
   }
  
  always {
    if(a_button.out){
      out = 16d1;
      is_pressed = 1;
    }else{
      out = 16b0;
      is_pressed = 0;
    }
  }
}